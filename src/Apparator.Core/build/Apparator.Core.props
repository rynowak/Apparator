<Project TreatAsLocalProperty="TaskFolder;TaskAssembly">
  <PropertyGroup>
    <TaskFolder Condition=" '$(MSBuildRuntimeType)' == 'Core' ">netstandard1.6</TaskFolder>
    <TaskFolder Condition=" '$(MSBuildRuntimeType)' != 'Core' ">net46</TaskFolder>
    <TaskAssembly>$(MSBuildThisFileDirectory)..\tasks\$(TaskFolder)\Apparator.Core.dll</TaskAssembly>
  </PropertyGroup>

  <UsingTask TaskName="Apparator.Core.Apparate" AssemblyFile="$(TaskAssembly)" />
</Project>
